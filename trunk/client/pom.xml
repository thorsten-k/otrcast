      	   		<version>1.2</version>
      	   		<type>jar</type>
      	   		<scope>compile</scope>
      	   	</dependency>
      	   	<dependency>
      	   		<groupId>commons-io</groupId>
      	   		<artifactId>commons-io</artifactId>
      	   		<version>2.0.1</version>
      	   		<type>jar</type>
      	   		<scope>compile</scope>
      	   	</dependency>
      	   	<dependency>
      	   		<groupId>commons-jxpath</groupId>
