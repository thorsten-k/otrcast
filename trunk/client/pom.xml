	<build>
		<finalName>OtrCutMp4</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assemble/exe.xml</descriptor>
					</descriptors>
					<archive>
						<manifestFile>src/assemble/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
	            <artifactId>maven-compiler-plugin</artifactId>
	            <inherited>true</inherited>
	            <configuration>
	               <source>1.6</source>
	               <target>1.6</target>
	            </configuration>
	         </plugin>
		</plugins>
	</build>
   
</project>